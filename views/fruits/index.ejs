<!-- views/fruits/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fruits Index</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="index-header-div">
    <h1>All Dank Fruits</h1>
    <img
    class="fruit-pic1"
    src="https://cdn-icons-png.flaticon.com/128/5312/5312448.png"
    alt="happy fruit salad bowl"
  />
</div>
    <ul>
        <% fruits.forEach(fruit => { %>
          <li><a href ="/fruits/<%= fruit._id %>"><%= fruit.name %></a></li>
        <% }); %>
      </ul>
      <a class="add-fruit" href="/fruits/new">Add New Fruit</a>
  </body>
</html>
