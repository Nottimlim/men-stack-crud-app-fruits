<!-- views/fruits/edit -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a Fruit</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Edit your Dank Fruit!</h1>
    <a class="fruits-index-link" href="/fruits"> Back to Fruits</a>
    <form action = "/fruits/<%=fruit._id%>?_method=PUT" method="POST">
        <label for="name">Name: </label>
        <input type="text" name="name" value="<%= fruit.name %>"/>
        <div class="checkbox-div">
        <label for="isReadyToEat">Good to go?</label>
        <input type="checkbox" name="isReadyToEat" id="isReadyToEat" <% if (fruit.isReadyToEat) { %>checked<% } %> > </div>
        <button type="submit">Update Dank Fruit</button>
    </form>
  </body>
</html>
