<!-- views/fruits/edit -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a Fruit</title>
  </head>
  <body>
    <h1>Edit your Dank Fruit!</h1>
    <a href="/fruits/">Back to Fruits</a>
    <form action = "/fruits/<%=fruit._id%>?_method=PUT" method="POST">
        <label for="name">Name: </label>
        <input type="text" name="name" value="<%= fruit.name %>"/>
        <label for="isReadyToEat">Ready to get blasted?</label>
        <input type="checkbox" name="isReadyToEat" id="isReadyToEat" <% if (fruit.isReadyToEat) { %>checked<% } %> >
        <button type="submit">Update The Dankiness of your Fruit</button>
    </form>
  </body>
</html>
